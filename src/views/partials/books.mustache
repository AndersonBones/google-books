


<div class="loading-animate w-100 text-center mt-3 mb-3">
    <div class="spinner-border text-white" role="status">
        <span class="sr-only"></span>
    </div>
</div>

<div class="books-area row">
    {{#books}}
        <div class="book-item col-lg-4 col-sm-6 col-md-6 d-flex flex-column justify-content-center align-items-center">
            <div class="thumbnail text-center rounded-1 overflow-hidden">
                <img src="{{thumbnail}}" alt="">
                
            </div>
            <span id="title" class="text-white">{{title}}</span>

            <a href="/selected-book/{{id}}" class="btn btn-primary p-1" id="more-info">More info</a>

        </div>
    {{/books}}
    
</div>