
<div class="loading-animate w-100 text-center mt-2">
    <div class="spinner-border" role="status">
        <span class="sr-only"></span>
    </div>
</div>

<div class="books-area row ">

    {{#books}}
        <div class="book-item col-lg-4 col-sm-6 col-md-6 d-flex flex-column justify-content-center align-items-center">
            <div class="thumbnail text-center">
                <img class="img-fluid img-thumbnail" src="{{thumbnail}}" alt="">
                <span id="title">{{title}}</span>
            </div>

            <a href="/selected-book/{{id}}" class="btn btn-secondary" id="more-info">More info</a>

        </div>
    {{/books}}
    
</div>